{
    "name": "image-service",
    "version": "0.1.0",
    "description": "Server de Im√°genes",
    "repository": {
        "type": "git",
        "url": "https://github.com/nmarsollier/2018_microservicios.git"
    },
    "author": "Nestor Marsollier",
    "license": "MIT",
    "scripts": {
        "start": "npm run build && npm run watch",
        "build": "npm run build-ts && npm run tslint && npm run apidoc && npm run apidocmd",
        "serve": "node dist/server.js",
        "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\"  \"npm run watch-ts\" \"nodemon dist/server.js\"",
        "build-ts": "tsc -p tsconfig.json",
        "watch-ts": "tsc -w -p tsconfig.json",
        "tslint": "tslint -c tslint.json -p tsconfig.json",
        "apidoc": "./node_modules/.bin/apidoc -i src -o ./dist/public",
        "apidocmd": "./node_modules/.bin/apidoc-markdown2 -p ./dist/public -o README-API.md"
    },
    "dependencies": {
        "body-parser": "1.20.1",
        "compression": "1.7.4",
        "dotenv": "16.0.3",
        "typed-rest-client": "1.8.9",
        "express": "4.18.1",
        "escape-html": "1.0.3",
        "uuid": "9.0.0",
        "ioredis": "5.2.3",
        "node-cache": "5.1.2",
        "morgan": "1.10.0",
        "helmet": "6.0.0",
        "cors": "2.8.5",
        "amqplib": "0.10.3",
        "jimp": "0.16.2",
        "base-64": "1.0.0"
    },
    "devDependencies": {
        "@types/body-parser": "1.19.2",
        "@types/express": "4.17.14",
        "@types/jest": "29.1.2",
        "@types/uuid": "8.3.4",
        "@types/ioredis": "4.28.10",
        "@types/escape-html": "1.0.2",
        "@types/morgan": "1.9.3",
        "@types/node": "18.8.3",
        "@types/helmet": "4.0.0",
        "@types/cors": "2.8.12",
        "@types/compression": "1.7.2",
        "@types/amqplib": "0.8.2",
        "concurrently": "7.4.0",
        "apidoc": "0.22.1",
        "apidoc-markdown2": "0.3.7",
        "tslint": "6.1.3",
        "nodemon": "2.0.20",
        "typescript": "4.8.4"
    }
}
